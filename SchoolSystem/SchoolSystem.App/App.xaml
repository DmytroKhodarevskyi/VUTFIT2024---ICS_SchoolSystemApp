<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SchoolSystem.App"
             xmlns:converters="clr-namespace:SchoolSystem.App.Converters"
             x:Class="SchoolSystem.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:NotEmptyConverter x:Key="NotEmptyConverter" />
            <converters:EnumToListConverter x:Key="EnumToListConverter" />
                
        </ResourceDictionary>
    </Application.Resources>
</Application>
